generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  BUYER
  SELLER
  ADMIN
}

enum SellerStatus {
  PENDING
  APPROVED
  REJECTED
}

enum ProductStatus {
  ACTIVE
  SUSPENDED
  DELETED
}

enum FraudReportStatus {
  OPEN
  CLOSED
}

enum SupportTicketStatus {
  OPEN
  IN_PROGRESS
  RESOLVED
}

enum PaymentType {
  LISTING_FEE
}

model User {
  id           String        @id @default(cuid())
  phone        String        @unique
  email        String?       @unique
  name         String?
  password     String?
  role         Role
  isVerified   Boolean       @default(false)
  buyerIdUrl   String?
  sellerStatus SellerStatus?
  sellerDetails Json?
  city         String?
  state        String?
  profilePhoto String?
  createdAt    DateTime      @default(now())
  isSuspended  Boolean       @default(false)

  // Relations
  products      Product[]
  favorites     Favorite[]
  fraudReports  FraudReport[]
  supportTickets SupportTicket[]
  payments      Payment[]
  chatsAsBuyer  Chat[]        @relation("ChatBuyer")
  chatsAsSeller Chat[]        @relation("ChatSeller")

  @@map("User")
}

model Product {
  id          String        @id @default(cuid())
  sellerId    String
  title       String
  description String
  price       Float
  condition   String
  categoryId  String
  subcategoryId String
  images      String[]
  city        String
  state       String
  pincode     String
  status      ProductStatus @default(ACTIVE)
  paymentId   String?
  createdAt   DateTime      @default(now())

  // Relations
  seller      User          @relation(fields: [sellerId], references: [id], onDelete: Cascade)
  category    Category      @relation(fields: [categoryId], references: [id])
  subcategory Subcategory   @relation(fields: [subcategoryId], references: [id])
  favorites   Favorite[]
  fraudReports FraudReport[]
  chats       Chat[]

  @@index([categoryId])
  @@index([categoryId, status])
  @@index([city])
  @@index([city, state])
  @@index([createdAt])
  @@index([createdAt, status])
  @@index([price])
  @@index([sellerId])
  @@index([sellerId, status])
  @@index([state])
  @@index([status])
  @@index([subcategoryId])

  @@map("Product")
}

model Category {
  id       String   @id @default(cuid())
  name     String   @unique
  image    String?
  icon     String?
  createdAt DateTime @default(now())

  // Relations
  subcategories Subcategory[]
  products      Product[]

  @@map("Category")
}

model Subcategory {
  id         String   @id @default(cuid())
  name       String
  categoryId String
  image      String?

  // Relations
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  products   Product[]

  @@unique([name, categoryId])

  @@map("Subcategory")
}

model Favorite {
  id        String   @id @default(cuid())
  userId    String
  productId String
  createdAt DateTime @default(now())

  // Relations
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([userId, productId])

  @@map("Favorite")
}

model FraudReport {
  id          String            @id @default(cuid())
  reporterId  String
  productId   String
  reason      String
  description String?
  evidence    String[]
  status      FraudReportStatus @default(OPEN)
  adminNotes  String?
  createdAt   DateTime          @default(now())
  resolvedAt  DateTime?

  // Relations
  reporter User    @relation(fields: [reporterId], references: [id], onDelete: Cascade)
  product  Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@map("FraudReport")
}

model SupportTicket {
  id           String              @id @default(cuid())
  ticketNumber String              @unique
  userId       String
  subject      String
  description  String
  category     String?
  email        String?
  status       SupportTicketStatus @default(OPEN)
  priority     String              @default("medium")
  attachments  String[]
  replies      String?             // JSON string of replies
  adminReply   String?
  screenshot   String?
  createdAt    DateTime            @default(now())
  updatedAt    DateTime            @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("SupportTicket")
}

model Payment {
  id            String      @id @default(cuid())
  userId        String
  type          PaymentType
  amount        Float
  currency      String      @default("INR")
  razorpayOrderId String?
  razorpayPaymentId String?
  status        String
  metadata      Json?
  createdAt     DateTime    @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("Payment")
}

model OTP {
  id        String   @id @default(cuid())
  phone     String   @unique
  code      String
  purpose   String
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())

  @@map("OTP")
}

model Chat {
  id            String   @id @default(cuid())
  buyerId       String
  sellerId      String
  productId     String
  messages      String?  // JSON string of messages
  lastMessage   String?
  buyerUnread   Int      @default(0)
  sellerUnread  Int      @default(0)
  buyerBlocked  Boolean  @default(false)
  sellerBlocked Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  buyer   User    @relation("ChatBuyer", fields: [buyerId], references: [id], onDelete: Cascade)
  seller  User    @relation("ChatSeller", fields: [sellerId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@map("Chat")
}

model Banner {
  id          String @id @default(cuid())
  title       String
  image       String?
  imageUrl    String?
  linkUrl     String?
  isActive    Boolean @default(true)
  displayOrder Int    @default(0)
  createdAt   DateTime @default(now())

  @@map("Banner")
}

model EmailTemplate {
  id       String   @id @default(cuid())
  name     String   @unique
  subject  String
  html     String
  text     String?
  variables Json?
  isActive Boolean  @default(true)
  createdAt DateTime @default(now())

  @@map("EmailTemplate")
}

model StaticPage {
  id          String   @id @default(cuid())
  slug        String   @unique
  title       String
  content     String
  isPublished Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("StaticPage")
}
